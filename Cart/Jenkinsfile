pipeline {
    
    agent any

    stages {

        stage("build") {

            steps {
                echo 'building the application...'
                sh 'go build .'
            }
        }

        stage("test") {

            steps {
                echo 'testing the application...'
                sh 'go test -v ./...'
            }
        }

        stage("deploy") {

            steps {
                echo 'deploying the application...'
            }
        }
    }
}