pipeline {
    
    agent any

    tools {
        go '1.18.1'
    }
    
    stages {

        stage("build") {

            steps {
                echo 'building the application...'
                sh 'cd cmd/server'
                sh 'go build .'
            }
        }

        stage("test") {

            steps {
                echo 'testing the application...'
                sh 'go test -v ./...'
            }
        }

        stage("deploy") {

            steps {
                echo 'deploying the application...'
            }
        }
    }
}